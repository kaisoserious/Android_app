<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cc9933"
    tools:context=".chongwuxiangqing">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/xiangqing_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"

            android:textColor="@android:color/background_light"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:text="运动小精灵"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100sp"
                android:text="The sports genie"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/xiangqing_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shangcheng"
            android:textColor="@android:color/background_light" />


    </LinearLayout>
    //上框
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/zongse">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/younian"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="幼年期"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="250dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/shaonian"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="少年期"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:layout_marginLeft="33dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/chennian"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  成年期\n(未解锁）"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:background="@drawable/zongse">

                <Button
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/xiaotouxiang"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-120dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:text="姓名：小熊猫"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="成长值：51%"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="活力值：50%"
                        android:textColor="@android:color/background_light" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/jindutiao"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="下一个阶段"
                android:textColor="@android:color/background_light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/beibaowai">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="道具背包"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="26sp"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/beibaonei"
                    android:layout_marginLeft="25dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/caomei"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/caomei"/>

                        <Button
                            android:id="@+id/putao"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/putao"/>

                        <Button
                            android:id="@+id/xiangjiao"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangjiao"/>
                        <Button
                            android:id="@+id/mogu"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/mogu"/>
                        <Button
                            android:id="@+id/yintao"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/yintao"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/tudou"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/jidan"
                            android:layout_gravity="center"/>

                        <Button
                            android:id="@+id/baicai"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/baicai"/>

                        <Button
                            android:id="@+id/huluobo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/huluobo"/>
                        <Button
                            android:id="@+id/yangcong"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/yangcong"/>
                        <Button
                            android:id="@+id/gwc_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/shangcheng"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>





    </LinearLayout>



</LinearLayout>